<UserControl
    x:Class="MarketSignals.Desktop.Views.SignalsDashboardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MarketSignals.Desktop.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>

        <ListView Name="SignalsListView" ItemsSource="{Binding Signals}">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Date}" Header="Date" />
                    <GridViewColumn DisplayMemberBinding="{Binding Text}" Header="Info" />
                    <GridViewColumn DisplayMemberBinding="{Binding Level}" Header="Level" />
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>

</UserControl>
